@model BasketballStatsApp.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="text-center">🏀 Player Stats Dashboard</h2>

@if (Model.TotalPlayers == 0)
{
    <div class="alert alert-warning text-center mt-4">
        No player data available yet. Go to the players page and create a player to see stats!
    </div>
}
else
{
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>Total Players</h4>
                <p class="display-6">@Model.TotalPlayers</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>Total Teams</h4>
                <p class="display-6">@Model.TotalTeams</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm p-3">
                <h4>Avg Points Per Game</h4>
                <p class="display-6">@Model.AveragePPG</p>
            </div>
        </div>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h4>Avg Assists Per Game</h4>
                <p class="display-6">@Model.AverageAPG</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h4>Avg Rebounds Per Game</h4>
                <p class="display-6">@Model.AverageRPG</p>
            </div>
        </div>
    </div>
}

<hr class="my-5" />

<h3 class="text-center mb-4"> NBA Highlights</h3>

<div class="row justify-content-center">
    <div class="col-md-6 mb-4">
        <div class="ratio ratio-16x9">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/3LRcKON9Mtk?si=FoWo8DFSKFNdiiJ1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="ratio ratio-16x9">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/ZbJpMH_Gn18?si=gxaYv2JRkgN1xA2K" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
    </div>
</div>
