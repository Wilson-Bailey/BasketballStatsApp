@model BasketballStatsApp.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<h2>Delete @Model.FullName?</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this player?</p>
    <ul>
        <li><strong>Position:</strong> @Model.Position</li>
        <li><strong>Team:</strong> @Model.Team?.Name</li>
    </ul>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PlayerId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}